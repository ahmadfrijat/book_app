                <input type="text" name="status" value="<%= book.isbn %>">
                <button type="submit"> Update  </button>
                </form>
            </ul>
        </div>
<ul>
    <li class="renderedList">
       <img src="<%= book.image %>"> 
       <h2><%=book.title %></h2>
       <h3><%=book.authors%></h3>
       <p><%=book.decr%></p>
       <h4><%=book.isbn%></h4>
       <p><%=book.bookshelf%></p>
       <button onclick="myFunction()">Try it</button>
    </li>
    <form action="<%= `/update/${book.id}?_method=PUT`%>" method="POST">
        <input type="hidden" name="image" value="<%= book.image%>">
        <input type="hidden" name="title" value="<%= book.title %>">
        <input type="hidden" name="contact" value="<%= book.authors %>">
        <input type="hidden" name="description" value="<%= book.decr %>">
