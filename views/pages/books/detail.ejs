<body>
    <header>
       <a href="/searches/new">Add a New Book</a>
       <a href="/">Home</a>  
          </header> 
          <div id="myDIV" >
            <form action="<%= `/update/${book.id}?_method=PUT`%>" method="POST">
                <input type="text" name="image" value="<%= book.image%>">
                <input type="text" name="title" value="<%= book.title %>">
                <input type="text" name="contact" value="<%= book.authors %>">
